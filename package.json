{
  "name": "node-template",
  "author": "Henrique Lopes Vieira",
  "version": "1.0.0",
  "description": "Template em Node com Typescript e Jest",
  "license": "MIT",
  "main": "index.js",
  "engines": {
    "node": "16.x"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/henriquelvieira/Node-Template.git"
  },
  "homepage": "https://github.com/henriquelvieira/Node-Template#readme",
  "keywords": [
    "node",
    "nodejs",
    "typescript",
    "api",
    "jest"
  ],
  "scripts": {
    "test": "jest --detectOpenHandles",
    "test:r": "jest --coverage",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules --no-notify src/main/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "cz": "cz",
    "lint": "eslint ./src --ext .ts",
    "lint:fix": "eslint ./src --ext .ts --fix"
  },
  "dependencies": {
    "dotenv": "^16.0.1",
    "pino": "^8.1.0"
  },
  "devDependencies": {
    "@types/jest": "^28.1.3",
    "@types/node": "^18.0.0",
    "@types/pino": "^7.0.5",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.19.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-config-standard-with-typescript": "^22.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^28.1.1",
    "pino-pretty": "^8.1.0",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
